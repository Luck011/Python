num1 = int(input("Primeiro número?\n"))
num2 = int(input("Segundo número?\n"))
op = input("Qual operação?\n")

if op =='+':
    resultado = num1 + num2
elif op == '-':
    resultado = num1 - num2
elif op == '*':
    resultado = num1 * num2

elif op == '/':
    resultado = num1 // num2

else:
    resultado = 'Erro'

print("Resultado:" + str(resultado) )
